<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="NO"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Nama"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Alamat"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvNomorHp"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="08123456789012"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvJenisPlafon"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="Jenis PVC jenis semen"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="Rp. 1.000.000"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvPanjang"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="100 m2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvLebar"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="100 m2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvTotalHarga"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Rp. 1.000.000.000"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

<!--    <ImageView-->
