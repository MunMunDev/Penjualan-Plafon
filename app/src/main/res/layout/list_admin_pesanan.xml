<!--        android:layout_height="60dp"-->
<!--        android:background="@drawable/bg_table"-->
<!--        android:gravity="center" />-->

    <TextView
        android:id="@+id/tvWaktu"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="10 Februari 2024 - 10:00:00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvWaktuKonfirmasi"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="10 Februari 2024 - 10:00:00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvMetodePembayaran"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Bayar Ditempat"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvWaktuBayar"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="10 Februari 2024 - 10:00:00"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="0dp"
        android:text=":::"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table" />

</LinearLayout>