<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivGambarPlafon"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerCrop"
            android:elevation="1dp"
            android:background="@color/abuabu_muda"/>

        <TextView
            android:id="@+id/tvJudulPlafon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivGambarPlafon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:text="Plafon PVC Motif Kayu"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/abuabu_muda"
            android:elevation="20dp"
            android:background="@color/abuabu_muda"/>

        <TextView
            android:id="@+id/tvTitleHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvJudulPlafon"
            app:layout_constraintBottom_toTopOf="@id/btnPesan"
            app:layout_constraintStart_toEndOf="@id/ivGambarPlafon"
            android:layout_marginTop="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:text="Harga Persegi"
            android:textSize="14sp"
            android:textColor="@color/abuabu_muda"
            android:elevation="20dp"
            android:background="@color/abuabu_muda"/>


        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvTitleHarga"
            app:layout_constraintStart_toEndOf="@id/tvTitleHarga"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:text="Rp.10.0000"
            android:textSize="14sp"
            android:textColor="@color/abuabu_muda"
            android:elevation="20dp"
            android:background="@color/abuabu_muda"/>

        <Button
            android:id="@+id/btnPesan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivGambarPlafon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:text="Pesan"
            android:textColor="@color/abuabu_muda"
            android:background="@color/abuabu_muda"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>