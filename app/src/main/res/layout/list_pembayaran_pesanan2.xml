<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/tvJenisPlafon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvPanjangKaliLebar"
        app:layout_constraintTop_toTopOf="@id/tvPanjangKaliLebar"
        app:layout_constraintBottom_toBottomOf="@id/tvPanjangKaliLebar"
        android:layout_marginEnd="6dp"
        android:text="Plavon PVC Jenis Kayu"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        android:lines="1"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/tvPanjangKaliLebar"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHarga"
        android:layout_marginEnd="6dp"
        android:gravity="center"
        android:text="300 X 200 m2"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/tvHarga"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPanjangKaliLebar"
        app:layout_constraintBottom_toBottomOf="@id/tvPanjangKaliLebar"
        android:layout_marginLeft="14dp"
        android:text="Rp. 50.000.000"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="normal"
        android:gravity="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>